include "/etc/bind/named.conf.options";
include "/etc/bind/named.conf.local";
include "/etc/bind/named.conf.default-zones";

zone "{fqdn}" {
		type master;
		file "/etc/bind/{fqdn}.zone";
		allow-transfer {
			127.0.0.1;
			198.41.0.4;
			192.203.230.10;
			{ip};
		};
		allow-query { any; };
		notify yes;
};
