#!/bin/bash

function red () {
  echo -e "\e[38;5;196m$1\e[0m"
}
function blue () {
  echo -e "\e[38;5;25m$1\e[0m"
}
function green () {
  echo -e "\e[38;5;118m$1\e[0m"
}
function orange () {
  echo -e "\e[38;5;178m$1\e[0m"
}

function red_warning () {
  echo -e "\e[38;5;9m[(/!\)]  $1\e[0m"
}
function blue_info () {
  echo -e "\e[38;5;39m[(?)]  $1\e[0m"
}
function green_success () {
  echo -e "\e[38;5;190m[OK]  $1\e[0m"
}
function orange_important () {
  echo -e "\e[38;5;178m[!IMPORTANT!]  $1\e[0m"
}

function installPackageIfNotExists() {
  dpkgcommand=$(dpkg-query -l $1)

  if [ "$dpkgcommand" != "dpkg-query: no packages found matching $1" ]
  then
    green "$1 is already installed"
   else
    apt-get install -yqq $1
  fi
}
