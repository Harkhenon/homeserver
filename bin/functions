#!/bin/bash

function red () {
  echo -e "\e[38;5;196m$1\e[0m"
}
function blue () {
  echo -e "\e[38;5;25m$1\e[0m"
}
function green () {
  echo -e "\e[38;5;118m$1\e[0m"
}
function orange () {
  echo -e "\e[38;5;178m$1\e[0m"
}

function red_warning () {
  echo -e "\e[38;5;9m ☒  $1\e[0m"
}
function blue_info () {
  echo -e "\e[38;5;39m ℹ  $1\e[0m"
}
function green_success () {
  echo -e "\e[38;5;190m ☑  $1\e[0m"
}
function orange_important () {
  echo -e "\e[38;5;178m ⚠  $1\e[0m"
}

function installPackageIfNotExists() {
  dpkgcommand=$(apt-cache policy $1 | grep -e "Installed");

  if [ "$dpkgcommand" != "  Installed: (none)" ]
  then
    green_success "Good, $1 is already installed";
  else
    orange_important "$1 not installed, so we'll intall it";
    apt-get install -yqq $1
  fi
}
